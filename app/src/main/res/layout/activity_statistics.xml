<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/race_road_blur"
    tools:context=".StatisticsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:elevation="11.5dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:padding="5.5dp"
        android:shadowColor="#E64D1F00"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3.125"
        android:text="@string/stats_label"
        android:textAllCaps="false"
        android:textColor="@color/red_orange"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6125"
        app:layout_constraintStart_toEndOf="@+id/backBTN"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <ImageButton
        android:id="@+id/backBTN"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:background="#00000000"
        android:elevation="11dp"
        android:onClick="back"
        android:scaleType="fitCenter"
        android:scaleX="0.55"
        android:scaleY="0.55"
        android:shadowColor="#E64D1F00"
        android:shadowDx="3.25"
        android:shadowDy="3.25"
        android:shadowRadius="2.5"
        android:src="@drawable/arrow_left"
        android:translationX="-7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <!-- Statistics Content Scroll View -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="805dp"
        android:orientation="vertical"
        android:padding="0.5dp"
        android:scrollbarSize="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBTN">

        <!-- Statistics Content -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- WIP Disclaimer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:shadowColor="#E64D1F00"
                android:shadowDx="3.5"
                android:shadowDy="3.5"
                android:shadowRadius="4.5"
                android:text="THIS IS A WIP STATISTICS SCREEN. A MORE POLISHED STATS SCREEN IS COMING SOON."
                android:textColor="@color/red_orange"
                android:textSize="15sp" />

            <!-- Stat Section Title - Personal Records -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:padding="20dp"
                android:shadowColor="#E64D1F00"
                android:shadowDx="7.5"
                android:shadowDy="7.5"
                android:shadowRadius="4.75"
                android:textColor="@color/red_orange"
                android:textSize="20dp"
                android:text="Personal Records"/>

            <!-- High Scores Subsection Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="#E64D1F00"
                android:shadowDx="7.5"
                android:shadowDy="7.5"
                android:shadowRadius="4.75"
                android:textColor="@color/red_orange"
                android:textSize="16sp"
                android:text="High Scores"/>

            <!-- High Scores Subsection -->
            <LinearLayout
                android:id="@+id/records_stat_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Easy High Score -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- Difficulty Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="Easy"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/StatHiScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="0"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Intermediate High Score -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- Difficulty Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="Intermediate"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/StatHiScore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="0"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Hard High Score -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- Difficulty Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="Hard"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/StatHiScore3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="0"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Insane High Score -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- Difficulty Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:padding="5dp"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="Insane"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                    <!-- Score -->
                    <TextView
                        android:id="@+id/StatHiScore4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:fontFamily="@font/press_start_2p"
                        android:gravity="center"
                        android:shadowColor="#E64D1F00"
                        android:shadowDx="7.5"
                        android:shadowDy="7.5"
                        android:shadowRadius="4.75"
                        android:text="0"
                        android:textColor="@color/red_orange"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <!-- Fastest Speed Subsection -->
            <LinearLayout
                android:id="@+id/fastest_speed_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Fastest Speed Subsection Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.5"
                    android:shadowDy="7.5"
                    android:shadowRadius="4.75"
                    android:text="Fastest Speed (SU)"
                    android:textColor="@color/red_orange"
                    android:textSize="16sp" />

                <!-- Fastest Speed Stat -->
                <TextView
                    android:id="@+id/StatPersonalFastest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.5"
                    android:shadowDy="7.5"
                    android:shadowRadius="4.75"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/red_orange"
                    android:textSize="14.5sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:scaleX="0.9"
                android:scaleY="0.15"
                android:padding="2.5dp"
                android:background="#33FF3300" />


            <!-- Average Score Subsection -->
            <LinearLayout
                android:id="@+id/avrg_score_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foregroundGravity="center"
                android:orientation="vertical">

                <!-- Average Score Subsection Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.5"
                    android:shadowDy="7.5"
                    android:shadowRadius="4.75"
                    android:textColor="@color/red_orange"
                    android:textSize="16sp"
                    android:text="Average Scores"/>

                <!-- Average Scores Subsection -->
                <LinearLayout
                    android:id="@+id/avrg_scores_stat_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Easy High Score -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <!-- Difficulty Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="Easy"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                        <!-- Score -->
                        <TextView
                            android:id="@+id/StatAvrgScore1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="0"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- Intermediate High Score -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <!-- Difficulty Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="Intermediate"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                        <!-- Score -->
                        <TextView
                            android:id="@+id/StatAvrgScore2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="0"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- Hard High Score -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <!-- Difficulty Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="Hard"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                        <!-- Score -->
                        <TextView
                            android:id="@+id/StatAvrgScore3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="0"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- Insane High Score -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <!-- Difficulty Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="Insane"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                        <!-- Score -->
                        <TextView
                            android:id="@+id/StatAvrgScore4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="8dp"
                            android:fontFamily="@font/press_start_2p"
                            android:gravity="center"
                            android:shadowColor="#E64D1F00"
                            android:shadowDx="7.5"
                            android:shadowDy="7.5"
                            android:shadowRadius="4.75"
                            android:text="0"
                            android:textColor="@color/red_orange"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:scaleX="0.9"
                android:scaleY="0.15"
                android:padding="2.5dp"
                android:background="#33FF3300" />

            <!-- Total Races Subsection -->
            <LinearLayout
                android:id="@+id/total_races_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Total Races Subsection Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="10dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.5"
                    android:shadowDy="7.5"
                    android:shadowRadius="4.75"
                    android:text="Total Races Completed"
                    android:textColor="@color/red_orange"
                    android:textSize="16sp" />

                <!-- Total Races Stat -->
                <TextView
                    android:id="@+id/StatTotalRaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="5dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.5"
                    android:shadowDy="7.5"
                    android:shadowRadius="4.75"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/red_orange"
                    android:textSize="14.5sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:scaleX="0.9"
                android:scaleY="0.15"
                android:padding="2.5dp"
                android:background="#33FF3300" />

            <!-- Raw Data Subsection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">

                <!-- View Raw Data Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all local data (raw)"
                    android:elevation="8dp"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="7dp"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="7.05"
                    android:shadowDy="7.05"
                    android:shadowRadius="4.75"
                    android:textAllCaps="false"
                    android:textColor="@color/red_orange"
                    android:textSize="10sp"/>

                <ImageButton
                    android:id="@+id/btn_raw_data"
                    android:layout_width="55dp"
                    android:layout_height="27.5dp"
                    android:background="#00000000"
                    android:elevation="11dp"
                    android:onClick="viewRawData"
                    android:scaleType="fitCenter"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:shadowColor="#E64D1F00"
                    android:shadowDx="3.25"
                    android:shadowDy="3.25"
                    android:shadowRadius="2.5"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.012" />
            </LinearLayout>

            <!-- App Version Name Text -->
            <TextView
                android:id="@+id/StatAppVersionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:padding="20dp"
                android:shadowColor="#E64D1F00"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="3.75"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/red_orange"
                android:textSize="12sp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>